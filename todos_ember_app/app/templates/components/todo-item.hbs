{{#if editing}}
    {{input class="edit" value=todo.text action="submitTodo"}}
{{else}}
    {{input type="checkbox" checked=todo.complete class="toggle"}}
    <label class="{{if todo.complete 'completed'}}" {{action "editTodo" on="doubleClick"}}>{{todo.text}}</label><button class="destroy" {{action "deleteTodo"}}></button>
{{/if}}
